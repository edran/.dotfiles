# ~/.profile: executed by the command interpreter for login shells.
# This file is not read by bash(1), if ~/.bash_profile or ~/.bash_login
# exists.


if [ -d "$HOME/bin" ] ; then
    PATH="$HOME/bin:$PATH"
fi

if [ -d "$HOME/.local/bin" ] ; then
    PATH="$HOME/.local/bin:$PATH"
fi

# In case we are doing haskell
if [ -d "$HOME/.cabal/bin" ] ; then
    PATH="$HOME/.cabal/bin:$PATH"
fi


# ### GENERAL

# export TERM="xterm-256color"
export HISTTIMEFORMAT="%h %d %H:%M:%S> "


# ### MACOS
if echo "$OSTYPE" | grep -q "darwin" ; then

  # enable ls colors for
  export CLICOLOR=1

fi


# ### DEV

export EDITOR=vim
# export PKG_CONFIG_PATH=$PKG_CONFIG_PATH:/usr/local/lib/pkgconfig
# export TIMEFMT=$'\nreal\t%E\nuser\t%U\nsys\t%S'
# export LANG="en_US.UTF-8"
# export LC_ALL=$LANG
# export LC_CTYPE="UTF-8"

export PROJECT_HOME="$HOME/lab"
export WORKON_HOME="$HOME/.conda/envs"

export MODULEPATH=/public/modulefiles
export MANPATH="$MANPATH:/usr/share/man:/usr/local/share/man"