ctrl + cmd - return : ~/bin/iterm-make-new-window

# close focused window
ctrl + cmd - w : chunkc tiling::window --close

# focus window
ctrl + cmd - h : chunkc tiling::window --focus west
ctrl + cmd - j : chunkc tiling::window --focus south
ctrl + cmd - k : chunkc tiling::window --focus north
ctrl + cmd - l : chunkc tiling::window --focus east

# equalize size of windows
ctrl + cmd - 0 : chunkc tiling::desktop --equalize

# swap window
ctrl + cmd + shift - h : chunkc tiling::window --swap west
ctrl + cmd + shift - j : chunkc tiling::window --swap south
ctrl + cmd + shift - k : chunkc tiling::window --swap north
ctrl + cmd + shift - l : chunkc tiling::window --swap east

# move window
ctrl + cmd + shift + alt - h : chunkc tiling::window --warp west
ctrl + cmd + shift + alt - j : chunkc tiling::window --warp south
ctrl + cmd + shift + alt - k : chunkc tiling::window --warp north
ctrl + cmd + shift + alt - l : chunkc tiling::window --warp east

# move floating windows / windows on a floating space
ctrl + cmd + shift - up     : chunkc tiling::window --warp-floating fullscreen
ctrl + cmd + shift - left   : chunkc tiling::window --warp-floating left
ctrl + cmd + shift - right  : chunkc tiling::window --warp-floating right
ctrl + cmd + shift + alt - left   : chunkc tiling::window --warp-floating top-left
ctrl + cmd + shift + alt - right  : chunkc tiling::window --warp-floating top-right
shift + ctrl - left  : chunkc tiling::window --warp-floating bottom-left
shift + ctrl - right : chunkc tiling::window --warp-floating bottom-right

# send window to desktop
# ctrl + cmd + shift - x : chunkc tiling::window --send-to-desktop $(chunkc get _last_active_desktop)
ctrl + cmd - tab : chunkc tiling::window --send-to-desktop next
ctrl + cmd + shift - tab : chunkc tiling::window --send-to-desktop prev
ctrl + cmd + shift - 1 : chunkc tiling::window --send-to-desktop 1
ctrl + cmd + shift - 2 : chunkc tiling::window --send-to-desktop 2
ctrl + cmd + shift - 3 : chunkc tiling::window --send-to-desktop 3
ctrl + cmd + shift - 4 : chunkc tiling::window --send-to-desktop 4
ctrl + cmd + shift - 5 : chunkc tiling::window --send-to-desktop 5
ctrl + cmd + shift - 6 : chunkc tiling::window --send-to-desktop 6

# focus monitor
ctrl + alt - z  : chunkc tiling::monitor -f prev
ctrl + alt - c  : chunkc tiling::monitor -f next
ctrl + alt - 1  : chunkc tiling::monitor -f 1
ctrl + alt - 2  : chunkc tiling::monitor -f 2
ctrl + alt - 3  : chunkc tiling::monitor -f 3

# send window to monitor and follow focus
ctrl + cmd - z  : chunkc tiling::window --send-to-monitor prev; chunkc tiling::monitor -f prev
ctrl + cmd - c  : chunkc tiling::window --send-to-monitor next; chunkc tiling::monitor -f next
ctrl + cmd - 1  : chunkc tiling::window --send-to-monitor 1; chunkc tiling::monitor -f 1
ctrl + cmd - 2  : chunkc tiling::window --send-to-monitor 2; chunkc tiling::monitor -f 2
ctrl + cmd - 3  : chunkc tiling::window --send-to-monitor 3; chunkc tiling::monitor -f 3

# increase region size
ctrl + cmd + shift - a : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge west
ctrl + cmd + shift - s : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge south
ctrl + cmd + shift - w : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge north
ctrl + cmd + shift - d : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge east

# decrease region size
ctrl + cmd + shift + alt - a : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge west
ctrl + cmd + shift + alt - s : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge south
ctrl + cmd + shift + alt - w : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge north
ctrl + cmd + shift + alt - d : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge east

# set insertion point for focused container
ctrl + alt - f : chunkc tiling::window --use-insertion-point cancel
ctrl + alt - h : chunkc tiling::window --use-insertion-point west
ctrl + alt - j : chunkc tiling::window --use-insertion-point south
ctrl + alt - k : chunkc tiling::window --use-insertion-point north
ctrl + alt - l : chunkc tiling::window --use-insertion-point east

# rotate tree
alt - r : chunkc tiling::desktop --rotate 90

# mirror tree y-axis
alt - y : chunkc tiling::desktop --mirror vertical

# mirror tree x-axis
alt - x : chunkc tiling::desktop --mirror horizontal

# toggle desktop offset
alt - a : chunkc tiling::desktop --toggle offset

# toggle window fullscreen
alt - f : chunkc tiling::window --toggle fullscreen

# toggle window native fullscreen
ctrl + cmd + shift - f : chunkc tiling::window --toggle native-fullscreen

# toggle window parent zoom
alt - d : chunkc tiling::window --toggle parent

# toggle window split type
alt - e : chunkc tiling::window --toggle split

# float / unfloat window
alt - t : chunkc tiling::window --toggle float

# toggle sticky, float and resize to picture-in-picture size
alt - s : chunkc tiling::window --toggle sticky;\
          chunkc tiling::window --warp-floating pip-right

# float next window to be tiled
ctrl + cmd + shift - t : chunkc set window_float_next 1

# change layout of desktop
ctrl + alt - a : chunkc tiling::desktop --layout bsp
ctrl + alt - s : chunkc tiling::desktop --layout monocle
ctrl + alt - d : chunkc tiling::desktop --layout float

ctrl + alt - w : chunkc tiling::desktop --deserialize ~/.chunkwm_layouts/dev_1
